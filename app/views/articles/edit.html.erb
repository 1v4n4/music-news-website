<div class="col-5 m-auto"> 
<h1 class="text-center my-5">Make your changes</h1>

<%= render 'form', article: @article %>
<div class="d-flex justify-content-center gap-3 mt-4">
    <div>
        <%= link_to 'Show', @article, class:"col-3 fw-bold list-group-item list-group-item-action btn btn-light border-0" %> 
    </div>
    <div class="mt-2">  |
    </div>
    <div>
        <%= link_to 'Delete', @article, method: :delete, data: { confirm: 'Are you sure?' }, class:"col-3 fw-bold list-group-item list-group-item-action btn btn-light border-0" %>
    </div>
    <div class="mt-2">  |
    </div>
    <div>
        <%= link_to 'Back', articles_path, class:"col-3 fw-bold list-group-item list-group-item-action btn btn-light border-0" %>

    </div>
  </div>
</div>
<div class="sticky">
    <%= render 'layouts/footer' %>
</div>
