<%= form_with(model: article) do |form| %>
  

  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div class="field">
    <%= form.label :text %>
    <%= form.text_area :text %>
  </div>

  <div class="field">
    <%= form.label :image %>
    <%= form.file_field :image %>
  </div>
    <div class="field">
    <%= form.label :category %>
  <%= form.collection_select :category_id, Category.all, :id, :name %> 
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>

<% end %>
