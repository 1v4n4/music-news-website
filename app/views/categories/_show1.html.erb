<div class="d-flex col-6">
          <div class="col-6">
            <%=image_tag select.image.url, alt: "article image", class:"grid-img" %>
          </div>
          <div class="col-6  row1 p-3">
            <p class="torange category1 fw-bold">
              <%= @category.name %>
            </p>
            <h3 class="fw-bold my-3 fs-5">
              <%= title_preview(select) %>
            </h3>
            <p>Author: <span class="torange fw-bold"><%=select.author.name %></span> | Votes: <span class="fw-bold torange"><%= select.votes.count%></span></p>
            <p class="preview my-2">
             <%= text_preview(select) %>
            </p>
            <%= link_to 'Read more', select, class:"fw-bold text-dark more" %>
            <div class="mt-3">
              <%= button_to 'Vote', controller: :votes, action: :create, method: :post, :article_id => select.id %>
            </div>
          </div>
        </div>